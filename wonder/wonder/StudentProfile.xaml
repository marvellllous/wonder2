<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="wonder.StudentProfile"
             BackgroundColor="LightSkyBlue">
    <ContentPage.Content>
        <StackLayout>
            <Entry x:Name="UserName" Placeholder="Enter name" />
            <Entry x:Name="Password" Placeholder="Enter Password" />
            <Button Grid.Column="0" Grid.Row="1" 
                    BackgroundColor="DodgerBlue" 
                    Text="Login" HorizontalOptions="FillAndExpand" 
                    VerticalOptions="Center" CornerRadius="20" 
                    TextColor="White" x:Name="StudLogin" Clicked= "StudLogin_Clicked"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>